input::-webkit-outer-spin-button, input::-webkit-inner-spin-button
  -webkit-appearance: none
  margin: 0

svg
  shape-rendering: crispEdges

#app
  margin: 10px 50px
  
  .variable-sliders
    display: table
    width: 100%
    
    .variable-slider
      display: table-row
      
      .slider-label, .slider-value, .slider
        display: table-cell
        margin: 5px 20px
        vertical-align: middle
      
      .slider-label
        text-align: right
      
      .slider-value
        max-width: 40px
        text-align: center
      
      .slider
        min-width: 500px
  
  .charts
    @clearfix()
    
    .chart
      float: left
      
      .extent
        fill: #FFFF00
        fill-opacity: 0.125
        stroke: #000000
        cursor: move
    
      .dot
        pointer-events: none

#gpu
  display block
